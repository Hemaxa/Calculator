<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="buttonBackground">@drawable/button_background_rect</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background_rect</item>
        <item name="specialButtonBackground">@drawable/special_button_background_rect</item>
        <item name="calculatorBackgroundColor">@color/pastel_blue_background</item>
        <item name="calculatorTextColor">@color/pastel_blue_text</item>
    </style>

    <style name="Theme.Calculator.PastelOrange" parent="Theme.Calculator">
        <item name="buttonBackground">@drawable/button_background_orange_rect</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background_orange_rect</item>
        <item name="specialButtonBackground">@drawable/special_button_background_orange_rect</item>
        <item name="calculatorBackgroundColor">@color/pastel_orange_background</item>
        <item name="calculatorTextColor">@color/pastel_orange_text</item>
    </style>

    <style name="Theme.Calculator.PastelPink" parent="Theme.Calculator">
        <item name="buttonBackground">@drawable/button_background_pink_rect</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background_pink_rect</item>
        <item name="specialButtonBackground">@drawable/special_button_background_pink_rect</item>
        <item name="calculatorBackgroundColor">@color/pastel_pink_background</item>
        <item name="calculatorTextColor">@color/pastel_pink_text</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item> <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item> <item name="android:layout_gravity">fill</item> <item name="android:layout_margin">4dp</item> <item name="android:background">?attr/buttonBackground</item>
        <item name="android:textColor">?attr/calculatorTextColor</item>
        <item name="android:textSize">28sp</item> <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="CalculatorButton.Operator">
        <item name="android:background">?attr/operatorButtonBackground</item>
    </style>

    <style name="CalculatorButton.Special">
        <item name="android:background">?attr/specialButtonBackground</item>
    </style>

</resources>