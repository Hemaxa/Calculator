<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="calculatorBackgroundColor">@color/pastel_blue_background</item>
        <item name="calculatorTextColor">@color/pastel_blue_text</item>
        <item name="buttonBackground">@drawable/button_background</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background</item>
        <item name="specialButtonBackground">@drawable/special_button_background</item>
    </style>

    <style name="Theme.Calculator.PastelOrange" parent="Theme.Calculator">
        <item name="calculatorBackgroundColor">@color/pastel_orange_background</item>
        <item name="calculatorTextColor">@color/pastel_orange_text</item>
        <item name="buttonBackground">@drawable/button_background_orange</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background_orange</item>
        <item name="specialButtonBackground">@drawable/special_button_background_orange</item>
    </style>

    <style name="Theme.Calculator.PastelPink" parent="Theme.Calculator">
        <item name="calculatorBackgroundColor">@color/pastel_pink_background</item>
        <item name="calculatorTextColor">@color/pastel_pink_text</item>
        <item name="buttonBackground">@drawable/button_background_pink</item>
        <item name="operatorButtonBackground">@drawable/operator_button_background_pink</item>
        <item name="specialButtonBackground">@drawable/special_button_background_pink</item>
    </style>


    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">?attr/buttonBackground</item> <item name="android:textColor">?attr/calculatorTextColor</item> <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">20dp</item>
    </style>

    <style name="CalculatorButton.Operator">
        <item name="android:background">?attr/operatorButtonBackground</item>
    </style>

    <style name="CalculatorButton.Special">
        <item name="android:background">?attr/specialButtonBackground</item>
    </style>

</resources>